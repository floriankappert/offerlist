<%= form_for @offer, :html => { :role => "form", :class => "form-horizontal" } do |f| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% @offer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-6">
      <div class="checkbox">
        <%= f.label :draft %>
        <%= f.check_box :draft %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :company, :class => "col-lg-2 control-label" %>
    <div class="col-lg-6"><%= f.text_field :company, :class => "form-control", :placeholder => "Company Name" %></div>
  </div>
  <div class="form-group">
    <%= f.label :title, :class => "col-lg-2 control-label" %>
    <div class="col-lg-6"><%= f.text_field :title, :class => "form-control", :placeholder => "Offertitle" %></div>
  </div>
  <div class="form-group">
    <%= f.label :project_name, :class => "col-lg-2 control-label" %>
    <div class="col-lg-6"><%= f.text_field :project_name, :class => "form-control", :placeholder => "Projectname" %></div>
  </div>
  <div class="form-group">
    <%= f.label :offer_date, :class => "col-lg-2 control-label" %>
    <div class="col-lg-6"><%= f.text_field :offer_date, :class => "form-control", :placeholder => "Date" %></div>
  </div>
  <div class="form-group">
    <%= f.label :offer_due_date, :class => "col-lg-2 control-label" %>
    <div class="col-lg-6"><%= f.text_field :offer_due_date, :class => "form-control", :placeholder => "Due" %></div>
  </div>
  <div class="form-group">
    <%= f.label :text, :class => "col-lg-2 control-label" %>
    <div class="col-lg-6"><%= f.text_area :text, :class => "form-control", :rows => "3", :placeholder => "Your PreText" %></div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-6">
      <%= f.submit :class => "btn btn-default" %>
    </div>
  </div>
<% end %>
