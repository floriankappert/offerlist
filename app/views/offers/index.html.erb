<h1>Listing offers</h1>

<%= will_paginate @offers, renderer: BootstrapPagination::Rails, bootstrap: 3 %>

<table>
  <tr>
    <th>Offer Number</th>
    <th>Company</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr class="<%= is_draft(offer) %>">
    <td><%= offer.offer_number %></td>
    <td><%= offer.company %></td>
    <td><%= offer.title %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
  <tr>
    <td colspan="7">Drafts</td>
  </tr>
<% @drafts.each do |draft| %>

  <tr>
    <td><%= draft.offer_number %></td>
    <td><%= draft.company %></td>
    <td><%= draft.title %></td>
    <td><%= link_to 'Show', draft %></td>
    <td><%= link_to 'Edit', edit_offer_path(draft) %></td>
    <td><%= link_to 'Destroy', draft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>

<% end %>

</table>

<br />

<%= link_to 'New Offer', new_offer_path %>
