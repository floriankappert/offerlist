<h1>
  <%= link_to icon("back"), offers_path, :class => "btn btn-default" %>
  Offer 
  <div class="toolbox">
    <%= link_to icon("edit"), edit_offer_path(@offer), :class => "btn btn-default" %>   
    <% if @offer.draft %>
    <%= link_to "ACTIVATE", activate_offer_path(@offer), :class => "btn btn-danger" %>
    <% else %>
    <span class="label label-info">Activated</span>
    <% end %>
  </div>
  
</h1>  

<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading"><%= @offer.offer_number %> | <%= @offer.title %> | <%= @offer.draft ? "Draft" : "Activated" %></div>
    
    <table class="table">
      <tbody>
        <tr>
          <th>Company</th>
          <td><%= @offer.company %></td>
        </tr>
        <tr>
          <th>Projectname</th>
          <td><%= @offer.project_name %></td>
        </tr>
        <tr>
          <th>PreText</th>
          <td><%= @offer.text %></td>
        </tr>
      </tbody>
    </table>
  <div class="panel-heading" style="text-align: center;">Credentials</div>
    <table class="table ">
      <thead>
        <th>Offer created at</th>
        <th>Offer Date</th>
        <th>Due Date</th>
      </thead>
      <tbody>
        <tr>
          <td><%= @offer.created_at.to_formatted_s() %></td>
          <td><%= @offer.offer_date %></td>
          <td><%= @offer.offer_due_date %></td>
        </tr>
      </tbody>
    </table>
</div>