<!DOCTYPE html>
<html>
<head>
  <% if content_for?(:title) %>
  <title><%= yield(:title) %></title>
  <% else %>
  <title>OfferList</title>
  <% end %>
  
  <% if content_for?(:description) %>
  <meta name="description" content="<%=h yield(:description) %>" >
  <% else %>
  <meta name="description" content="OfferList is the hottest shit for listing offers." >
  <% end %>


  
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	<div class="row">
		<div class="col-md-2">
			<ul class="nav nav-pills nav-stacked">
			  <li><%= link_to "Offers", offers_path %></li>
			</ul>
		</div>
		<div class="col-md-8">
			<%= yield %>
		</div>
	</div>


</body>
</html>
