if ($("#offer_item_wrapper_<%= @offer_item.id %>").prev().length > 0) {
	var $previousrow = $("#offer_item_wrapper_<%= @offer_item.id %>").prev();
}

$("#offer_item_wrapper_<%= @offer_item.id %>").remove();

if ($previousrow) {
	$previousrow.after("<%= j render @offer_item %>");
} else {
	$(".offer_items").prepend("<%= j render @offer_item %>");
}